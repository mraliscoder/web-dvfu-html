form-base()
  margin-bottom 20px
  padding 20px
  border 1px solid #b9b9b9
  border-radius 3px

.filter-form
  form-base()

  &__title
    margin-bottom 10px

  &__field
    margin-bottom 10px

  &__label
    display inline-block
    margin-right 10px

  &__input
  &__select
    padding 5px
    border 1px solid #b9b9b9
    border-radius 3px

  &__actions
    margin-top 10px

  &__button
    padding 5px 10px
    margin-right 5px
    background-color #04AA6D
    color #ffffff
    border none
    border-radius 3px
    cursor pointer
    transition background-color 0.3s ease

    &:hover
      background-color darken(#04AA6D, 10%)

    &--reset
      background-color #999

      &:hover
        background-color #666

