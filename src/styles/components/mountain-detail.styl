@import '../variables'
@import '../mixins'

.mountain-detail
  &__title
    margin-bottom $spacing-md
    color $color-text

  &__divider
    margin $spacing-md 0

  &__image
    width 100%
    max-width 600px
    height auto
    margin $spacing-lg 0
    border-radius $radius-sm

  &__paragraph
    margin-bottom $spacing-md
    line-height 1.6
    text-align justify
